@model List<string>
@{ 
    string dato = DateTime.Now.ToLongDateString();
    string cl = "red";
    string cl2 = "blue";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3 style="background-color: @cl">Datoen er @dato</h3>
    @for (int i = 0; i < 5; i++)
    {
        <h5>@i</h5>
    }

    @{
        int t = 0;
    }
        <ol>
            @foreach (var item in Model)
            {
                if (++t % 2 == 0)
                {
                    <li style="color:red">@item</li>
                }
                else
                {
                    <li style="color:blue">@item</li>
                }
            }
        </ol>
</body>
</html>
